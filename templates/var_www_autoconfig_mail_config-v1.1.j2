<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
    <emailProvider id="{{ ansible_pdm_mailserver_domain }}">
        <domain>{{ ansible_pdm_mailserver_domain }}</domain>
        <displayName>{{ ansible_pdm_mailserver_domain }}</displayName>
        <displayShortName>{{ ansible_pdm_mailserver_domain }}</displayShortName>
        <incomingServer type="imap">
            <hostname>{{ ansible_pdm_mailserver_mail_server_hostname }}</hostname>
            <port>993</port>
            <socketType>SSL</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILADDRESS%</username>
        </incomingServer>
        <incomingServer type="pop3">
            <hostname>{{ ansible_pdm_mailserver_mail_server_hostname }}</hostname>
            <port>995</port>
            <socketType>SSL</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILADDRESS%</username>
        </incomingServer>
        <outgoingServer type="smtp">
            <hostname>{{ ansible_pdm_mailserver_mail_server_hostname }}</hostname>
            <port>587</port>
            <socketType>STARTTLS</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILADDRESS%</username>
        </outgoingServer>
    </emailProvider>
</clientConfig>
